<% #TODO: Xavier: Translation of the entire page %>
<% if (!flash[:alert].nil?) #if there is a notice from any other pages %>
  <section id="register-error">
    <%= flash[:alert] %>
  </section>
<% else %>
  <section id="register-title">
    <p>Log in to your account</p>
  </section>
<% end %>

<section id="register-content">
  <div class='container'>
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <%= form_tag sessions_path do %>
        <div class="input-group">
          <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
          <%= text_field_tag :username, nil, placeholder: 'Login or email', class: 'form-control' %>
        </div>
        <div class="input-group">
          <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
          <%= password_field_tag :password, nil, placeholder: 'Password',class: 'form-control' %>
        </div>
        <div class="button-group">
          <%= submit_tag 'Log in', class: 'btn btn-primary' %>
        </div>
      <%end%>
    </div>
  </div>
</section>